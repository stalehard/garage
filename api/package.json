{
  "name": "api",
  "version": "0.1.0",
  "description": "hapi",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "serve": "./node_modules/.bin/nodemon dist/index.js",
    "start": "npm run tsc-watch & npm run serve",
    "tsc": "tsc",
    "tsc-watch": "tsc -w",
    "lint": "tslint -c tslint.json 'src/**/*.ts' --fix"
  },
  "dependencies": {
    "hapi": "17.4.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.1",
    "@types/boom": "7.2.0",
    "@types/hapi": "^17.4.0",
    "@types/joi": "13.0.8",
    "@types/jsonwebtoken": "7.2.6",
    "@types/node": "9.4.7",
    "husky": "^1.2.1",
    "nodemon": "^1.18.9",
    "tslint": "5.9.1",
    "typescript": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "license": "MIT"
}
